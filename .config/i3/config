# Layout stuff:
	bindsym $mod+b splith
	bindsym $mod+v splitv

	bindsym $mod+q layout default
	bindsym $mod+w layout stacking
	bindsym $mod+e layout tabbed

	bindsym $mod+f fullscreen

	bindsym $mod+Shift+space floating toggle

	bindsym $mod+space focus mode_toggle

	bindsym $mod+a focus parent

mode "resize" {
	bindsym $left resize shrink width 10 px or 10 ppt
	bindsym $down resize grow height 10 px or 10 ppt
	bindsym $up resize shrink height 10 px or 10 ppt
	bindsym $right resize grow width 10 px or 10 ppt

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Status Bar:
#
bar {
	status_command LC_ALL=C i3status
	font pango:Droid Sans Mono 8
    	position top
    	colors {
				background $color_bg
				statusline $color_fg
				# colorclass       border    background text
				focused_workspace  $color_fg $color_fg  $color_bg
				active_workspace   $color_bg $color_bg  $color_fg
				inactive_workspace $color_bg $color_bg  $color_fg
				urgent_workspace   #ff0000   #ff0000    #000000
    	}
}

# Autostart
#
$exec pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo 0
$exec pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo 50%
$exec pactl set-source-mute alsa_input.pci-0000_00_1f.3.analog-stereo 0
$exec pactl set-source-volume alsa_input.pci-0000_00_1f.3.analog-stereo 50%
$exec pactl set-source-mute alsa_output.pci-0000_00_1f.3.analog-stereo.monitor 1
$exec pactl set-source-volume alsa_output.pci-0000_00_1f.3.analog-stereo.monitor 50%
$exec urxvtd -q -f -o
$exec compton --no-fading-openclose --active-opacity=1.0 --inactive-opacity=0.65 --no-dnd-shadow --shadow-ignore-shaped --vsync opengl --backend glx
$exec_always ~/.fehbg



