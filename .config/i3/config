### Variables
#
set $exec exec --no-startup-id
set $exec_always exec_always --no-startup-id
set $mod Mod4
set $wmod Control
set $alt Mod1
set $left h
set $down j
set $up k
set $right l
set $term urxvtc -pe selection-to-clipboard
set $browser firefox
set $files ranger
set $files_visual nautilus
set $menu dmenu_run
set $monitor0 DVI-I-1
set $monitor1 DVI-D-1

### Key bindings
#
  # Applications
  bindsym $mod+o $exec $browser
  bindsym $mod+i $exec $term -e $files
  bindsym $mod+u $exec $files_visual
  bindsym $mod+Shift+Return $exec $term -e vim

  # Pulse Audio controls
  #bindsym XF86AudioRaiseVolume $exec gpactl set-sink-volume 0 +5% && pactl set-sink-volume 1 +5% #increase sound volume
  #bindsym XF86AudioLowerVolume $exec gpactl set-sink-volume 0 -5% && pactl set-sink-volume 1 -5% #decrease sound volume
  #bindsym XF86AudioMute $exec gpactl set-sink-mute 0 toggle && pactl set-sink-mute 1 toggle # mute sound

  # Sreen brightness controls
  bindsym XF86MonBrightnessUp $exec light -A 8 # increase screen brightness
  bindsym XF86MonBrightnessDown $exec light -U 8 # decrease screen brightness

# general
	bindsym $mod+Return $exec $term
	bindsym $mod+shift+q kill
	bindsym $mod+m $exec i3lock -t -i ~/.wallpaper/cat_mushroom.png
	bindsym $mod+p $exec scrot -u '%Y-%m-%d__%T__$wx$h.png' -e 'mv $f /home/sven/.screenshots'
	bindsym $mod+d $exec $menu
	floating_modifier $mod
	bindsym $mod+Shift+c restart
	bindsym $mod+Shift+e exit
	bindsym $mod+$left focus left
	bindsym $mod+$down focus down
	bindsym $mod+$up focus up
	bindsym $mod+$right focus right
